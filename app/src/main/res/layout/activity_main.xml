<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.linggom.berlianto_1202150016_studycase4.MainActivity">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="PILIHAN MENU"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/textView2" />

    <Button

        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pencari"
        android:layout_below="@+id/textView2"
        android:layout_gravity="center"
        android:layout_marginTop="83dp"
        android:text="List Mahasiswa" />

    <Button
        android:id="@+id/pencari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="91dp"
        android:text="Pencari Gambar" />


</RelativeLayout>


